<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Mapa-->
    <fragment
        android:id="@+id/nossoMapa"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="610dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/cast_expanded_controller_background_color"
        android:textColor="#FFFFFF"
        android:text="Legendas"
        android:textAlignment="center">
    </TextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Lgendas-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:stretchColumns="1">

            <!--Legenda Marcador Recicl치veis-->
            <TableRow>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_column="1"
                    android:text="Recicl치veis">
                </TextView>
            </TableRow>

            <!--Legenda Marcador Medicamentos-->
            <TableRow>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_column="1"
                    android:text="Medicamentos">
                </TextView>
            </TableRow>

            <!--Legenda Marcador Entulhos-->
            <TableRow>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_column="1"
                    android:text="Recicl치veis">
                </TextView>
            </TableRow>

            <!--Legenda Marcador Teste 1-->
            <TableRow>
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_column="1"
                    android:text="Teste">
                </TextView>
            </TableRow>

            <!--Legenda Marcador Teste 2-->
            <TableRow android:layout_width="match_parent">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_column="1"
                    android:text="Recicl치veis">
                </TextView>
            </TableRow>

            <!--Legenda Marcador Teste 3-->
            <TableRow>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_column="1"
                    android:text="Teste">
                </TextView>
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#000000"/>
        </TableLayout>
    </ScrollView>
</LinearLayout>